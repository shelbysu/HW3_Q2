#include <iostream>
#include "Rectangle.h"
#include "Triangle.h"
using namespace std;

int main() {
    std::cout << "Hello, World!" << std::endl;
    Rectangle r1(5,9);
    cout << "Area: " <<r1.getArea() << endl;
    r1.draw();

    Rectangle r2(15,29);
    cout << "Area: " <<r2.getArea() << endl;
    r2.draw();

    Triangle t1(5,10);
    cout << "Area: " <<t1.getArea() << endl;
    t1.draw();

    Triangle t2(10,20);
    cout << "Area: " <<t2.getArea() << endl;
    t2.draw();

   // Polygon p1(5, 10);
    //cout << "Area: " <<p1.getArea() << endl;
    //p1.draw();

    return 0;
}
// Question 1:Variable type Polygon is an abstract class
// because getArea and draw are pure virtual functions

// Question 2:Variable type is an abstract class
// even though we changed getArea draw is still a pure virtual function.
